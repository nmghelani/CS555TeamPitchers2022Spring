<h1 class="title justify-content-between d-flex">
    <span>Let's WATER it!!!</span>
    <span>
      <label class="switch">
        <input type="checkbox" class="toggle_theme" checked>
        <span class="slider round"></span>
      </label>
    </span>
  </h1>
<div class="cursor">
</div>
<div class="flex-container">
    <div class="flex-child screen">
        <div class="center">
            <div>
                <img class="laptop-mask" src="/public/images/laptop-mask.jpeg">
                <img class="laptop" src="/public/images/laptop.png">
            </div>
        </div>
    </div>
</div>
<div id="glassOfWater" class="wateritcontainer cursor">
    <div class="glass">
        <div class="water"></div>
    </div>
</div>

<svg>
    <filter id="turbulence" x="0" y="0" width="100%" height="100%">
        <feTurbulence id="sea-filter" numOctaves="2" seed="4" baseFrequency="0.01 0.005"></feTurbulence>
        <feDisplacementMap scale="0" in="SourceGraphic"></feDisplacementMap>
        <animate id="animation" xlink:href="#sea-filter" attributeName="baseFrequency" dur="60s" 
        keyTimes="0;0.5;1" values="0.02 0.06;0.04 0.08;0.02 0.06" repeatCount="indefinite"/>
    </filter>
</svg>

<script src="/public/js/waterit.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TimelineLite.min.js"></script>